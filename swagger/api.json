{
  "openapi": "3.0.0",
  "info": {
    "title": "Pouch API Server",
    "description":
      "Pouch api server. [c8112002/pouch-api](https://github.com/c8112002/pouch-api)",
    "contact": {
      "email": "c8112002@gmail.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://api:8080/v1",
      "description": "dev server"
    },
    {
      "url": "https://foo/v1",
      "description": "prod server"
    }
  ],
  "tags": [
    {
      "name": "article",
      "description": "Everything about Articles"
    },
    {
      "name": "tag",
      "description": "Everything about Tags"
    }
  ],
  "paths": {
    "/articles": {
      "get": {
        "tags": ["article"],
        "summary": "Return articles",
        "description": "",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Articles"
                }
              }
            }
          },
          "405": {
            "description": "Invalid input"
          }
        }
      }
    },
    "/articles/{articleId}": {
      "get": {
        "tags": ["article"],
        "summary": "Return an article.",
        "parameters": [
          {
            "name": "articleId",
            "in": "path",
            "required": true,
            "description": "Parameter description in CommonMark or HTML.",
            "schema": {
              "type": "integer",
              "format": "int64",
              "minimum": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Article"
                }
              }
            }
          },
          "405": {
            "description": "Invalid input"
          }
        }
      },
      "put": {
        "tags": ["article"],
        "summary": "記事を編集する",
        "parameters": [
          {
            "name": "url",
            "in": "query",
            "required": true,
            "description": "Article's url.",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "tags",
            "in": "query",
            "required": true,
            "description": "Tags related to a article.",
            "schema": {
              "type": "array"
            }
          },
          {
            "name": "comments",
            "in": "query",
            "required": false,
            "description": "記事.",
            "schema": {
              "type": "array"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Article"
                }
              }
            }
          },
          "405": {
            "description": "Invalid input"
          }
        }
      },
      "delete": {
        "tags": ["article"],
        "summary": "記事を削除する",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Article"
                }
              }
            }
          },
          "405": {
            "description": "Invalid input"
          }
        }
      }
    },
    "/article": {
      "post": {
        "tags": ["article"],
        "summary": "記事を作成する",
        "parameters": [
          {
            "name": "url",
            "in": "query",
            "required": true,
            "description": "Article's url.",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "tags",
            "in": "query",
            "required": true,
            "description": "Tags related to a article.",
            "schema": {
              "type": "array"
            }
          },
          {
            "name": "comment",
            "in": "query",
            "required": false,
            "description": "Comment related to a article.",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Article"
                }
              }
            }
          },
          "405": {
            "description": "Invalid input"
          }
        }
      }
    },
    "/articles/{articleId}/read": {
      "patch": {
        "tags": ["article"],
        "summary": "記事を既読/未読にする",
        "parameters": [
          {
            "name": "read",
            "in": "query",
            "required": true,
            "description": "既読: true, 未読: false",
            "schema": {
              "type": "boolean"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Article"
                }
              }
            }
          },
          "405": {
            "description": "Invalid input"
          }
        }
      }
    },
    "/tags": {
      "get": {
        "tags": ["tag"],
        "summary": "Return tags",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Tags"
                }
              }
            }
          },
          "405": {
            "description": "Invalid input"
          }
        }
      }
    }
  },
  "security": {
    "api_key": {
      "type": "apiKey",
      "name": "api_key",
      "in": "header"
    }
  },
  "components": {
    "schemas": {
      "Articles": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Article"
        }
      },
      "Article": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "title": {
            "type": "string"
          },
          "url": {
            "type": "string"
          },
          "image_path": {
            "type": "string"
          },
          "read": {
            "type": "boolean"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Comments": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Comment"
        }
      },
      "Comment": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "body": {
            "type": "string"
          }
        }
      },
      "Tags": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Tag"
        }
      },
      "Tag": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "count": {
            "type": "integer",
            "format": "int64"
          }
        }
      }
    }
  }
}
